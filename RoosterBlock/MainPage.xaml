<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RoosterBlock.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Welcome to Rooster Block!" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <Label Text="Our goal is to protect you from unwanted MMS pictures!" FontSize="Title" Padding="30,10,30,10"/>
        <Label Text="Allow this app to run in the background on your phone and it will notify you every time you get a text containing a picture that may be unwanted." FontSize="16" Padding="30,0,30,0"/>
    </StackLayout>

</ContentPage>
